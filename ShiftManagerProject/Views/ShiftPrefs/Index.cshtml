@model IEnumerable<ShiftManagerProject.Models.ShiftPref>

@{
    ViewBag.Title = "Your Preferences";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> DayOfWeek = new List<string>(new string[] { "", "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" });
    List<string> Shifts = new List<string>(new string[] { "M", "A", "N" });
    int i = 1;
    int flag = 0;
    long ID = 0;
    string name = null;
    foreach (var item in Model)
    {
        ID = item.ID;
        name = item.Name;
    }
    var sh = Model.ToList();
}
<link rel="stylesheet" type="text/css" href="~/Content/ShiftPrefIndex.css" />
<br />
<h2>Your Preferences</h2>
<br />
<div class="container">
    <div class="row">
        <div class="col">
            <p>
                @Html.ActionLink("Edit", "Edit", new { Id = ID }, new { @class = "btn btn-success" })
            </p>
        </div>
        <div class="col-9">
        </div>
        <div class="col">
        </div>
    </div>
</div>
<br />
<div class='table-responsive'>
    <table id="tablePreview" class="table table-hover table-bordered table-condensed">
        <tr class="table-active tblheader">
            <th>
            </th>

            @foreach (var day in DayOfWeek)
            {
                if (day != "")
                {
                    <th>
                        @Html.DisplayFor(x => day)
                    </th>
                }
            }
        </tr>


        @foreach (var items in Model.Take(1))
        {
            <tr>
                <td class="table-info tblcontext">
                    @Html.DisplayNameFor(model => model.Morning1)
                </td>
                @foreach (var shift in sh)
                {
                    foreach (var prop in shift.GetType().GetProperties())
                    {
                        if (prop.PropertyType == typeof(Nullable<bool>))
                        {
                            var NameofShift = prop.Name;
                            if (NameofShift.Substring(NameofShift.Length - 1, 1) == Convert.ToString(i))
                            {
                                if (NameofShift.Substring(0, 1) == Shifts[flag])
                                {
                                    var val = (Boolean)prop.GetValue(shift);
                                    if (val)
                                    {
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = ID }, new { @class = "fas fa-check" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    i++;
                                }
                            }
                        }
                    }
                }

            </tr>
        }

        @foreach (var items in Model.Take(1))
        {
            i = 1;
            flag++;
            <tr>
                <td class="table-info tblcontext">
                    @Html.DisplayNameFor(model => model.Afternoon1)
                </td>
                @foreach (var shift in sh)
                {
                    foreach (var prop in shift.GetType().GetProperties())
                    {
                        if (prop.PropertyType == typeof(Nullable<bool>))
                        {
                            var NameofShift = prop.Name;
                            if (NameofShift.Substring(NameofShift.Length - 1, 1) == Convert.ToString(i))
                            {
                                if (NameofShift.Substring(0, 1) == Shifts[flag])
                                {
                                    var val = (Boolean)prop.GetValue(shift);
                                    if (val)
                                    {
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = ID }, new { @class = "fas fa-check" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    i++;
                                }
                            }
                        }
                    }
                }
            </tr>
        }

        @foreach (var items in Model.Take(1))
        {
            i = 1;
            flag++;
            <tr>
                <td class="table-info tblcontext">
                    @Html.DisplayNameFor(model => model.Night1)
                </td>
                @foreach (var shift in sh)
                {
                    foreach (var prop in shift.GetType().GetProperties())
                    {
                        if (prop.PropertyType == typeof(Nullable<bool>))
                        {
                            var NameofShift = prop.Name;
                            if (NameofShift.Substring(NameofShift.Length - 1, 1) == Convert.ToString(i))
                            {
                                if (NameofShift.Substring(0, 1) == Shifts[flag])
                                {
                                    var val = (Boolean)prop.GetValue(shift);
                                    if (val)
                                    {
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = ID }, new { @class = "fas fa-check" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    i++;
                                }
                            }
                        }
                    }
                }
            </tr>
        }

    </table>
</div>
<br /><br />
