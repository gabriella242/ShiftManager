    <div class="row">
        <div class="col-12">
            @{
                if (@ViewBag.admin != 0)
                {
                    <h3>Offically Closed!</h3>
                }
                else
                {
                    @Html.ActionLink("Submit", "Send", "", new { @class = "btn btn-outline-danger" })
                }
            }
        </div>
    </div>
</div>
