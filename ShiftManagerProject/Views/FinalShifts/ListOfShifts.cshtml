                    }
                </td>
                <td>
                    @if (item.Night3 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Morning4 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Afternoon4 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Night4 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Morning5 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Afternoon5 == true)
