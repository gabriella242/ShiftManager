                <td>
                    @if (item.Morning6 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Afternoon6 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Night6 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Morning7 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Afternoon7 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
                <td>
                    @if (item.Night7 == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                </td>
            </tr>
        }

    </table>
</div>
@{
    if (@ViewBag.closed != 0)
    {
        <p>
            @Html.ActionLink("Close Week", "Close", "FinalShifts", new { @class = "btn btn-outline-info" })
        </p>
    }
    else
